<p style="color: green"><%= notice %></p>


<div class="showitem_full">
  <div class="showitem_images" >
   <% @item.images.each do |image| %>
      <%= image_tag(image) %>
    <% end %>
</div>

<div class="showitem_desc">
  
  <h2><%= @item.name %></h2>

  <p>
     <%= @item.description %>
  </p>

  <p>
    <strong>Starting price:</strong>
    <%= number_to_currency(@item.starting_price, unit: "₹ " )%>
  </p>

  <p>
    <strong>Current bid:</strong>
    <%= number_to_currency(@item.current_bid, unit: "₹ " ) %>
    <%= link_to "Bid Now", new_bid_path, class: "bidnow_btn" %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= @item.end_time %>
  </p>
</div>
</div>






<div>
  <%= link_to "Edit this item", edit_item_path(@item) %> |
  

  <!-- <%= button_to "Destroy this item", @item, method: :delete %> -->
</div>

